---
import Link from "./Link.astro";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}

const props = Astro.props;
---

<Link
    target="_blank"
    underline
    class="inline-flex items-center gap-2 border border-neutral-200 dark:border-neutral-700 rounded-sm py-2 px-4"
    {...props}
>
    <slot />
</Link>
