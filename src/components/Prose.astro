---
interface Props {
    as?: string;
}

const { as: Component = "div" }: Props = Astro.props;
---

<Component
    class:list={[
        "prose",
        "prose-neutral",
        "dark:prose-invert",
        "prose-h1:font-bold",
        "prose-h1:text-xl",
        "prose-a:text-blue-600",
        "prose-p:text-justify",
        "prose-img:rounded-xl",
        "prose-headings:underline",
    ]}
>
    <slot />
</Component>
